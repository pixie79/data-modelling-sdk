{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/OffeneDatenmodellierung/data-modelling-sdk/schemas/decision-schema.json",
  "title": "MADR Decision Record",
  "description": "Schema for MADR-compliant decision records (.madr.yaml)",
  "type": "object",
  "required": [
    "id",
    "number",
    "title",
    "status",
    "category",
    "date",
    "context",
    "decision",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the decision"
    },
    "number": {
      "type": "integer",
      "minimum": 1,
      "description": "Timestamp-based decision number in YYMMDDHHmm format (e.g., 2601101806). Prevents merge conflicts in distributed Git workflows."
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Short title describing the decision"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "proposed",
        "accepted",
        "rejected",
        "superseded",
        "deprecated"
      ],
      "description": "Current status of the decision"
    },
    "category": {
      "type": "string",
      "enum": [
        "architecture",
        "technology",
        "process",
        "security",
        "data",
        "integration",
        "datadesign",
        "workflow",
        "model",
        "governance",
        "performance",
        "compliance",
        "infrastructure",
        "tooling"
      ],
      "description": "Category of the decision"
    },
    "domain": {
      "type": ["string", "null"],
      "description": "Domain this decision belongs to"
    },
    "domainId": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "UUID of the domain this decision is associated with"
    },
    "workspaceId": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "UUID of the workspace this decision belongs to"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "Date the decision was made"
    },
    "decidedAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the decision was accepted/finalized"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of authors who contributed to the decision"
    },
    "deciders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "People or teams who made the decision (RACI - Responsible)"
    },
    "consulted": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "People or teams consulted during decision making (RACI - Consulted)"
    },
    "informed": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "People or teams to be informed about the decision (RACI - Informed)"
    },
    "context": {
      "type": "string",
      "minLength": 1,
      "description": "Problem statement and context for the decision"
    },
    "drivers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          }
        },
        "additionalProperties": false
      },
      "description": "Reasons driving this decision"
    },
    "options": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DecisionOption"
      },
      "description": "Options considered for this decision"
    },
    "decision": {
      "type": "string",
      "minLength": 1,
      "description": "The decision that was made"
    },
    "consequences": {
      "type": ["string", "null"],
      "description": "Positive and negative consequences of the decision"
    },
    "linkedAssets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["assetType", "assetId", "assetName"],
        "properties": {
          "assetType": {
            "type": "string",
            "enum": ["odcs", "odps", "cads", "relationship"]
          },
          "assetId": {
            "type": "string",
            "format": "uuid"
          },
          "assetName": {
            "type": "string"
          },
          "relationship": {
            "type": "string",
            "enum": ["affects", "implements", "deprecates"]
          }
        },
        "additionalProperties": false
      },
      "description": "Assets affected by this decision"
    },
    "supersedes": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "ID of the decision this supersedes"
    },
    "supersededBy": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "ID of the decision that superseded this"
    },
    "relatedDecisions": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "IDs of related decisions"
    },
    "relatedKnowledge": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "IDs of related knowledge articles"
    },
    "compliance": {
      "type": ["object", "null"],
      "properties": {
        "regulatoryImpact": {
          "type": "string"
        },
        "privacyAssessment": {
          "type": "string"
        },
        "securityAssessment": {
          "type": "string"
        },
        "frameworks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "description": "Compliance assessment for the decision"
    },
    "confirmationDate": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Date the decision was confirmed/reviewed"
    },
    "confirmationNotes": {
      "type": ["string", "null"],
      "description": "Notes from confirmation review"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization"
    },
    "notes": {
      "type": ["string", "null"],
      "description": "Additional notes"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp"
    }
  },
  "definitions": {
    "DecisionOption": {
      "type": "object",
      "required": ["name", "selected"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Option title/name"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the option"
        },
        "pros": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Advantages of this option"
        },
        "cons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Disadvantages of this option"
        },
        "selected": {
          "type": "boolean",
          "description": "Whether this option was selected"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
