{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/OffeneDatenmodellierung/data-modelling-sdk/schemas/knowledge-index-schema.json",
  "title": "Knowledge Index",
  "description": "Schema for the knowledge.yaml index file",
  "type": "object",
  "required": ["schemaVersion", "articles", "nextNumber"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Schema version (e.g., '1.0')"
    },
    "lastUpdated": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "articles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["number", "id", "title", "articleType", "status", "file"],
        "properties": {
          "number": {
            "type": "integer",
            "minimum": 1,
            "description": "Timestamp-based article number in YYMMDDHHmm format"
          },
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Article UUID"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Article title"
          },
          "articleType": {
            "type": "string",
            "enum": [
              "guide",
              "reference",
              "concept",
              "tutorial",
              "troubleshooting",
              "runbook",
              "standard",
              "glossary",
              "howto",
              "policy",
              "template"
            ],
            "description": "Type of knowledge article"
          },
          "status": {
            "type": "string",
            "enum": ["draft", "review", "published", "archived", "deprecated"],
            "description": "Publication status"
          },
          "domain": {
            "type": ["string", "null"],
            "description": "Domain the article belongs to"
          },
          "file": {
            "type": "string",
            "pattern": ".*\\.kb\\.yaml$",
            "description": "Filename of the article YAML file"
          }
        },
        "additionalProperties": false
      },
      "description": "List of article entries"
    },
    "nextNumber": {
      "type": "integer",
      "minimum": 1,
      "description": "Next available article number"
    }
  },
  "additionalProperties": false
}
